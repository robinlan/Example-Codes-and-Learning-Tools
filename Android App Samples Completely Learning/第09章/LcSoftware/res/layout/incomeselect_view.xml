<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFCCC"
    >
	<TextView 
		android:textSize="17dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
  		android:text="百納理財專家" 
		android:id="@+id/TextView01" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="@drawable/title"
		android:gravity="center"
		>
	</TextView>
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dip"
    	android:layout_marginRight="15dip"
    	android:layout_marginTop="4dip"
    	android:layout_marginBottom="4dip"
    	android:gravity="center"
    	android:background="@drawable/navigator"
	    >
	    <TextView
			android:text="理財選單"
			android:gravity="center"
			android:layout_height="wrap_content"
			android:layout_width="100dip"
			android:textSize="18dip"
			android:layout_marginRight="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold">
		</TextView>
	    <TextView
	    	android:text="收入查詢" 
	    	android:gravity="center"
	    	android:textSize="18dip"
	    	android:layout_width="100dip" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textColor="#FFFFFF"
			android:textStyle="bold"
			android:background="@drawable/hilight"
		>
		</TextView>
    </LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout03" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layout_marginTop="1dip"
		android:background="#ffcc66"
		>
		<CheckBox 
		    android:textSize="18dip"
		    android:textStyle="bold"
		    android:textColor="#FFFFFF"
			android:text="   收入日期: " 
			android:id="@+id/CheckBox01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			>
		</CheckBox>
		<TextView 
			android:id="@+id/EditText01" 
			android:text="點擊插入日期"
			android:textSize="16dip"
			android:textColor="#000000"
			android:gravity="center"
			android:background="@drawable/tj0" 
			android:layout_width="fill_parent" 
			android:layout_height="32dip"
			android:layout_marginRight="5dip"
			>
		</TextView>
	
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout04" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="#ffcc66"
		>
		<TextView 
		    android:textSize="18dip"
		    android:textStyle="bold"
		    android:textColor="#FFFFFF"
			android:text=" 到   " 
			android:id="@+id/TextView02" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="100dip"
			>
		</TextView>
		<TextView 
			android:id="@+id/EditText02"  
			android:text="點擊插入日期"
			android:textSize="16dip"
			android:textColor="#000000"
			android:gravity="center"
			android:background="@drawable/tj0" 
			android:layout_width="fill_parent" 
			android:layout_height="32dip"
			android:layout_marginRight="5dip"
			>
		</TextView>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout05" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#ffcc66"
		>
		<CheckBox 
		    android:textSize="18dip"
		    android:textStyle="bold"
		    android:textColor="#FFFFFF"
			android:text="   收入金額: " 
			android:id="@+id/CheckBox02" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			>
		</CheckBox>
		<EditText 
			android:id="@+id/EditText03" 
			android:text="0"
			android:numeric="integer"
			android:gravity="center"
			android:layout_width="fill_parent" 
			android:layout_height="38dip"
			android:layout_marginRight="5dip"
			>
		</EditText>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout06" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="#ffcc66"
		>
		<TextView 
		    android:textSize="18dip"
		    android:textStyle="bold"
		    android:textColor="#FFFFFF"
			android:text=" 到   " 
			android:id="@+id/TextView03" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="100dip"
			>
		</TextView>
		<EditText 
			android:text="0"
			android:id="@+id/EditText04" 
			android:numeric="integer"
			android:gravity="center"
			android:layout_width="fill_parent" 
			android:layout_height="38dip"
			android:layout_marginRight="5dip"
			>
		</EditText>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout07" 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:background="#ffcc66"
		>
		<CheckBox 
		    android:textSize="18dip"
		    android:textStyle="bold"
		    android:textColor="#FFFFFF"
			android:text="   收入來源: " 
			android:id="@+id/CheckBox03" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dip"
			>
		</CheckBox>
		<Spinner 
			android:id="@+id/Spinner01" 
			android:layout_width="fill_parent" 
			android:layout_marginTop="-18dip"
			android:layout_height="38dip"
			android:layout_marginRight="5dip">
		</Spinner>
	</LinearLayout>
	<LinearLayout 
		android:id="@+id/LinearLayout02" 
		android:gravity="center"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:background="#ffcc66"
		>
		<Button
			android:text="查詢數據" 
			android:id="@+id/Button01" 
			android:textSize="16dip"
			android:layout_marginLeft="10dip"
			android:layout_width="100dip"
			android:layout_height="40dip"
			>
		</Button>
		<Button 
			android:text="返回" 
			android:id="@+id/Button02" 
			android:textSize="16dip"
			android:layout_width="100dip" 
			android:layout_marginLeft="90dip"
			android:layout_height="40dip"
			>
		</Button>
	</LinearLayout>
    <com.bn.lc.GGViewc
       android:layout_width="320dip" 
       android:layout_height="155dip" 
    />
</LinearLayout>
