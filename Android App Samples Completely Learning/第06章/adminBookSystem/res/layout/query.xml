<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffcc"
    >
    
    <FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="40dip"
    android:background="@drawable/title"
   >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonquery" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
    <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
      android:layout_marginTop="4dip"
      android:layout_marginBottom="4dip"
      android:background="@drawable/navigator"
    >      
      <TextView
         android:text="查詢"
         android:layout_height="wrap_content"
         android:layout_width="100dip" 
         android:id="@+id/query"
         android:textSize="18dip"
		 android:layout_marginLeft="10dip"
		 android:textColor="#FFFFFF"
		 android:gravity="center"
		 android:background="@drawable/hilight"
       />
       <TextView
         android:text="掛失"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:id="@+id/lose"
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
        />
        <TextView
         android:text="預約"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:id="@+id/yuyue"
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
        />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcc66"
           android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
        android:minHeight="180px"
     >
      <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
       <RadioGroup 
        android:id="@+id/RadioGroup01" 
        android:orientation="horizontal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
	      <RadioButton 
	         android:text="簡單查詢" 
	         android:id="@+id/simpleQuery" 
	         android:checked="true"	 
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content"
	         android:textColor="#000000">
	      </RadioButton>   
	      <RadioButton 	         
	         android:text="高級查詢" 
	         android:id="@+id/highQuery" 
	         android:textColor="#000000"       
	         android:layout_width="wrap_content" 
	         android:layout_height="wrap_content">
	      </RadioButton>  
	  </RadioGroup>
	 </LinearLayout>
     
     <FrameLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      >   
          <LinearLayout
              android:orientation="horizontal"
              android:id="@+id/linearsimple"
              android:layout_width="fill_parent"  
              android:layout_height="wrap_content"
              android:visibility="visible"
   
            > 
              <Spinner 
                 android:id="@+id/Spinner01" 
                 android:layout_width="110px"
                 android:layout_height="50px"
                 android:minWidth="100px"                                                                              
                 >
                 
              </Spinner>
              <EditText
                 android:id="@+id/simpleQueryEdit"
                 android:layout_width="fill_parent"
                 android:layout_height="51px"                 
                 android:layout_marginLeft="5px"                
                 android:enabled="true"
                 >
                 
               </EditText> 
           </LinearLayout> 
           <LinearLayout
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" 
              android:id="@+id/linearhigh"
              android:visibility="invisible"
              android:layout_marginLeft="7dip"
             android:layout_marginRight="7dip"
             >
                <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                  >
                      <TextView
                         android:text="書名"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="18dip"
                         android:textColor="#000000"                         
                      />
                      <EditText
                        android:id="@+id/highEditSM"
                        android:layout_height="40dip"
                        android:layout_width="fill_parent"                        
                        android:textSize="18dip"                       
                       />                                                       
                  </LinearLayout>
                  <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                  >
                     <TextView
                         android:text="作者"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="18dip"                         
                         android:textColor="#000000"                        
                      />
                      <EditText
                        android:id="@+id/highEditZZ"
                        android:layout_height="40dip"
                        android:layout_width="fill_parent"
                        android:minWidth="100px"
                        android:maxWidth="100px"
                        android:textSize="18dip"                       
                       />                                  
                  </LinearLayout>
                  <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                  >
                      <TextView
                         android:text="出版社"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="18dip"   
                         android:textColor="#000000"                                            
                      />
                      <EditText
                        android:id="@+id/highEditCBS"
                        android:layout_height="40dip"
                        android:layout_width="fill_parent"                        
                        android:textSize="18dip"                                                
                       />          
                  </LinearLayout>
             
             </LinearLayout>
                            
      </FrameLayout>
      <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
          android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
       android:gravity="right"                         
    >      
       <Button
          android:text="查詢"
          android:layout_width="90dip"
          android:layout_height="40dip"
          android:layout_marginRight="30px"         
          android:id="@+id/querybok"        
        />         
    </LinearLayout>     
    </LinearLayout> 
    <com.bn.lb.admin.GGView  
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"    
       android:layout_marginTop="10dip"
       android:layout_marginRight="10dip"
       android:layout_marginLeft="7dip"
       android:layout_marginBottom="7dip"
    />
                           
</LinearLayout>
