<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#ffffcc"
  android:orientation="vertical"
  >
     <FrameLayout
       android:layout_width="fill_parent"
       android:layout_height="40dip"
       android:background="@drawable/title"
     >
    <TextView
    	android:text="深南大學圖書管理系統"
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="0dip"
		android:layout_marginBottom="0dip"
		android:layout_marginLeft="0dip"
		android:textSize="20dip"
		android:textColor="#FFFFFF"
		android:textStyle="bold"
		android:gravity="center"
    >
    </TextView> 
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 	
    	android:gravity="center_vertical|right"   	
    >    
	    <ImageButton 
			android:id="@+id/ImageButtonself_query" 
			android:background="@drawable/next_button"
			android:layout_width="40dip" 
			android:layout_height="30dip"
			android:layout_marginTop="0dip"
			android:layout_marginRight="15dip"
		>
		</ImageButton>
    </LinearLayout>
   </FrameLayout>
   <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
      android:layout_marginTop="4dip"
      android:layout_marginBottom="4dip"
      android:background="@drawable/navigator"
    >      
      <TextView
         android:text="查詢"
         android:layout_height="wrap_content"
         android:layout_width="100dip" 
         android:id="@+id/query"
         android:textSize="18dip"
		 android:layout_marginLeft="10dip"
		 android:textColor="#FFFFFF"
		 android:gravity="center"	
		 android:background="@drawable/hilight"	 
       />
       <TextView
         android:text="掛失"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:id="@+id/lose"
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
         
        />
        <TextView
         android:text="預約"
         android:layout_width="100dip"
         android:layout_height="wrap_content"
         android:id="@+id/yuyue"
         android:textSize="18dip"
         android:gravity="center"
         android:textColor="#FFFFFF"
         
        />
    </LinearLayout> 
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dip"
       android:orientation="vertical"
             android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
     >
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
        >
            <TextView
               android:text="館內圖書信息查詢"
               android:textSize="16dip"
               android:textColor="#000000"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
            ></TextView>
            <TextView
               android:layout_width="160px"
               android:layout_height="3dip"
               android:background="#ffcc66"
            ></TextView>
        </LinearLayout>
        <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginTop="10dip"
        >           
            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              
            >  
               <LinearLayout
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="5dip"
                >
                   <TextView
                      android:text="* 中文圖書"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14dip"
                    ></TextView>
                    <TextView
                      android:text="* 外文圖書"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14dip"
                    ></TextView>
                     <TextView
                      android:text="* 中文期刊"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14dip"
                    ></TextView>
                     <TextView
                      android:text="* 外文期刊"
                      android:textColor="#000000"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14dip"
                    ></TextView>
                </LinearLayout>  
                <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="left"
                >
                <com.bn.lb.admin.GGView1
                   android:layout_width="30dip"
                   android:layout_height="30dip" 
                   android:layout_marginTop="0dip"
                                    
                 />    
                <Button
                   android:text="圖書信息查詢"
                   android:textColor="#996633"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18dip"
                   android:id="@+id/self_or_bok"
                   android:background="#ffffcc"
                   android:layout_marginTop="5dip"
                ></Button>
                </LinearLayout> 
            </LinearLayout>
            <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/query1"
            ></ImageView>
        </LinearLayout>
     </LinearLayout> 
     <com.bn.lb.admin.GGView
       android:layout_width="fill_parent" 
       android:layout_height="fill_parent" 
       android:layout_marginLeft="7dip"
      android:layout_marginRight="7dip"
    />                                                
</LinearLayout>
